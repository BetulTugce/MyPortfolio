@model ToDoList
@{
    ViewData["Title"] = "UpdateToDoList";
    Layout = "~/Views/Layout/Index.cshtml";
}


<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">To Do List</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Update The Task</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            To update the task, please fill in the relevant fields.
                        </div>
                        <form method="post">
                            <input type="hidden" asp-for="Id" />
                            <label>Content :</label>
                            @* asp-for : .net coreda kullanılan bir tag helperdır. Yukarıdaki modele bağlı olarak o modelin içindeki propertylere erişim sağlamamıza yardımcı olur. *@
                            <input type="text" asp-for="Content" class="form-control" />
                            <br />
                            <label>Date :</label>
                            <input type="date" asp-for="Date" class="form-control" />
                            <br />
                            <label>Image :</label>
                            <input type="text" asp-for="ImageUrl" class="form-control" />
                            <br />
                            <button class="btn btn-primary">Save</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

